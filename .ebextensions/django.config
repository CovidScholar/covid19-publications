option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: covid19_publications/wsgi.py
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: covid19_publications.settings

container_commands:
  01_static:
    command: "python manage.py collectstatic"
    leader_only: true
  02_migrate:
    command: "python manage.py migrate"
    leader_only: true
  03_loaddata:
    command: "python manage.py loaddata db-202003292022.json && python manage.py loaddata topics"
    leader_only: true
  04_setup_images:
    command: "python setup/image_downloader.py"
    leader_only: true
  05_setup_lda:
    command: "python setup/lda_setup.py"
    leader_only: true


